<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btn9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="251dp"
        android:text="9" />

    <Button
        android:id="@+id/btn8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/btn9"
        android:layout_marginStart="97dp"
        android:text="8" />

    <Button
        android:id="@+id/btn7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/btn9"
        android:layout_toEndOf="@+id/btn8"
        android:text="7" />

    <Button
        android:id="@+id/btn6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="183dp"
        android:text="6" />

    <Button
        android:id="@+id/btn5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/btn8"
        android:layout_alignTop="@+id/btn6"
        android:text="5" />

    <Button
        android:id="@+id/btn4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/btn7"
        android:layout_alignTop="@+id/btn6"
        android:text="4" />

    <Button
        android:id="@+id/btn3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="119dp"
        android:text="3" />

    <Button
        android:id="@+id/btn2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/btn8"
        android:layout_alignTop="@+id/btn3"
        android:text="2" />

    <Button
        android:id="@+id/btn1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/btn7"
        android:layout_alignTop="@+id/btn3"
        android:text="1" />

    <Button
        android:id="@+id/btn0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/btn8"
        android:layout_marginBottom="58dp"
        android:text="0" />

    <Button
        android:id="@+id/btndiv"
        android:layout_width="78dp"
        android:layout_height="50dp"
        android:layout_alignTop="@+id/btn9"
        android:layout_toEndOf="@+id/btn7"
        android:background="@android:color/holo_orange_dark"
        android:text="/"
        android:textSize="18sp" />

    <Button
        android:id="@+id/btnmul"
        android:layout_width="76dp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/btndiv"
        android:layout_alignTop="@+id/btn6"
        android:background="@android:color/holo_orange_dark"
        android:text="*"
        android:textSize="24sp" />

    <Button
        android:id="@+id/btndel"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/btn0"
        android:background="@android:color/holo_orange_dark"
        android:text="Del" />

    <Button
        android:id="@+id/btneql"
        android:layout_width="76dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/btn0"
        android:layout_toEndOf="@+id/btn8"
        android:background="@android:color/holo_orange_dark"
        android:text="=" />

    <Button
        android:id="@+id/btnadd"
        android:layout_width="77dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/btn3"
        android:layout_toEndOf="@+id/btn7"
        android:background="@android:color/holo_orange_dark"
        android:text="+" />

    <Button
        android:id="@+id/btnsub"
        android:layout_width="74dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/btn0"
        android:layout_toEndOf="@+id/btn7"
        android:background="@android:color/holo_orange_dark"
        android:text="-"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/result"
        android:layout_width="339dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/btn9"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="63dp"
        android:gravity="center"
        android:textColor="@android:color/holo_orange_dark"
        android:textSize="70sp"
        android:textStyle="bold|italic"
        android:typeface="serif"
        app:fontFamily="@font/oleo_script_swash_caps_bold" />
</RelativeLayout>